<h1 class="text-white">Edit <%= @user.full_name %>'s Profile</h1>
</br>
<%= form_with model: @user do |f| %>
  <% if @user.errors.any? %>
    <div class="flash flash-danger mb-4">
      <h5 class="flash__instruction text-bold text-danger-300 mb-1">
        Please correct the following errors:
      </h5>
      <ul class="flash__list-errors list-disc pl-4">
        <% @user.errors.full_messages.each do |message| %>
          <li class="flash__error-item text-small text-grayscale-100"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="main-content__form-container space-y-4 mb-6">
    <div class="form-control">
      <%= render partial: 'shared/form/label', locals: { for_name: "full_name", placeholder: "Full Name" } %>
      <%= f.text_field :full_name, class: "input-field", placeholder: "Enter your full name" %>
    </div>
    <div class="form-control">
      <%= render partial: 'shared/form/label', locals: { for_name: "email", placeholder: "Email" } %>
      <%= f.text_field :email, class: "input-field", placeholder: "Enter your email" %>
    </div>
    <div class="form-control">
      <%= render partial: 'shared/form/label', locals: { for_name: "username", placeholder: "Username" } %>
      <%= f.text_field :username, class: "input-field", placeholder: "Create your own username" %>
    </div>
  </div>
  <%= f.submit "SAVE", class: "btn btn-primary" %>
<% end %>
<%= link_to "<- Back to Home", root_path, class: "text-white underline" %>